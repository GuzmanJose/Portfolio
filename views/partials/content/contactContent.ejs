<img src="/images/fullSize/content_header_fullSize.png" class="contact-img">
<section id="contact" class="card-contact">
  <form class="card-contact-content" action="/contact" id="contactForm" method="post">
    <div class="form-group">
      <label for="InputEmail">Name</label>
      <input name="name" type="text" class="form-control" id="Name" placeholder="Name">
    </div> <!-- form-group -->
    <div class="form-group">
      <label for="InputEmail">Email address</label>
      <input name="email" type="email" class="form-control" id="Email"  placeholder="Email">
    </div> <!-- form-group -->
    <div class="form-group">
      <label for="InputMessage" >Message</label>
      <textarea name="message" class="form-control" rows="4" id="Message" placeholder="Message"></textarea>
    </div> <!-- form-group -->
    <div class="form-group">
      <label for="InputMessage" >Choose Side</label>
      <label class="radio">
        <input type="radio" name="inlineRadioOptions" id="Resistance" value="Rebel">  <i class="fa fa-rebel" aria-hidden="true"></i>
      </label>
      <label class="radio">
        <input type="radio" name="inlineRadioOptions" id="Empire" value="Empire">  <i class="fa fa-empire" aria-hidden="true"></i>
      </label>
    </div> <!-- form-group -->
  <% if (typeof errors !== 'undefined') { -%>
      <% for (var i = 0; i < errors.length; i++) { -%>
        <ul class="errors-contact">
        <li><%= errors[i].msg%></li>
        </ul>
      <% } -%>
  <% }  -%>
  <% if (typeof msg !== 'undefined') { -%>
  <ul class="msg-contact">
    <li><%= msg %></li>
  </ul>
  <% } -%>
  <button type="submit" class="button" id="submit">Send</button>
  </form>
</section>
